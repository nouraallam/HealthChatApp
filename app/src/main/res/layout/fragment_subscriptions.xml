<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/teal_700">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/confidentialityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidentialité et Sécurité :"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:id="@+id/availabilityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heures de Disponibilité :"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:id="@+id/questionTypesTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Types de Questions Autorisées :"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:id="@+id/behaviorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Respect et Comportement :"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:id="@+id/usageInstructionsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions d'Utilisation :"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:id="@+id/moderationPolicyTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Politique de Modération :"
                android:gravity="center"
                android:padding="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
