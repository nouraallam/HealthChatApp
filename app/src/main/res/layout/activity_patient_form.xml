<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/white"
    tools:context=".PatientFormActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/green_border"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Form"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/green_background"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/selectImageButton"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ico_photo"
                android:onClick="onSelectImageClick"
                android:layout_marginTop="20dp" />


            <EditText
                android:id="@+id/editTextNom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/green_border"
                android:hint="Name"
                android:padding="8dp"
                android:textColor="@color/green_background" />

            <EditText
                android:id="@+id/editTextPrenom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_border"
                android:hint="Username"
                android:padding="8dp"
                android:textColor="@color/green_background" />

            <EditText
                android:id="@+id/editTextAge"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Age"
                android:inputType="number"
                android:textColor="@color/green_background"/>

            <EditText
                android:id="@+id/editTextAdresse"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Adress"
                android:textColor="@color/green_background"/>

            <EditText
                android:id="@+id/editTextNumeroTelephone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Phone"
                android:inputType="phone"
                android:textColor="@color/green_background"/>

            <EditText
                android:id="@+id/editTextDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_border"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textColor="@color/green_background"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Save"
                android:layout_marginTop="30dp"
                app:cornerRadius="20dp"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="@drawable/green_background"
                />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
