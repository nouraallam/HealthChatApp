<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/imageViewAffiche"
        android:layout_toLeftOf="@id/imageViewAffiche"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textViewFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0BDA51"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#C0C0C0"
            android:background="@android:color/white"/>

        <!-- Ajoutez d'autres TextView pour les autres champs de FoodDiary -->

    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewAffiche"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/affiche"
        android:scaleType="fitCenter"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="true"/>


</RelativeLayout>
